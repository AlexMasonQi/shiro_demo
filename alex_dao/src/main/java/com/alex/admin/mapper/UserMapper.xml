<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.alex.admin.dao.UserDao">
    <resultMap id="userMap" type="com.alex.admin.entity.User">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="user_name" jdbcType="VARCHAR" property="userName"/>
        <result column="user_password" jdbcType="VARCHAR" property="userPassword"/>
        <result column="salt" jdbcType="VARCHAR" property="salt"/>
        <result column="user_role" jdbcType="INTEGER" property="userRole"/>
        <result column="add_time" jdbcType="TIMESTAMP" property="addTime"/>
        <result column="last_login_time" jdbcType="TIMESTAMP" property="lastLoginTime"/>
        <result column="status" jdbcType="TINYINT" property="status"/>
    </resultMap>

    <resultMap id="roleMap" type="com.alex.admin.entity.Role">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="role_name" jdbcType="VARCHAR" property="roleName"/>
        <result column="role_type" jdbcType="VARCHAR" property="roleType"/>
    </resultMap>

    <resultMap id="permissionMap" type="com.alex.admin.entity.Permission">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="permission_name" jdbcType="VARCHAR" property="permissionName"/>
        <result column="permission_url" jdbcType="VARCHAR" property="permissionUrl"/>
    </resultMap>

    <!--获取所有用户-->
    <select id="getUserList" resultMap="userMap">
        SELECT
            id,
            user_name,
            user_password,
            salt,
            user_role,
            add_time,
            last_login_time,
            status
        FROM
            shiro_user
    </select>

    <!--根据用户名查询用户信息-->
    <select id="getUserByUserName" resultMap="userMap">
        SELECT
        id,
        user_name,
        user_password,
        salt,
        user_role,
        status
        FROM shiro_user
        <where>
            <if test="userName!=null">
                user_name = #{userName,jdbcType=VARCHAR}
            </if>
        </where>
    </select>

    <!--根据用户ID查找对应角色信息-->
    <select id="getRoleById" resultMap="roleMap">
        SELECT
            r.id,
            r.role_name
        FROM shiro_role r
            INNER JOIN shiro_user_role ur
                ON r.id = ur.role_id
                   AND ur.user_id = #{id};
    </select>

    <!--根据角色ID查询对应的权限信息-->
    <select id="getPermissionsByRoleId" resultMap="permissionMap">
        SELECT
            p.id,
            p.permission_name,
            p.permission_url
        FROM shiro_permission p
            INNER JOIN shiro_role_permission up
                ON p.id = up.p_id
                   AND up.r_id = #{roleId};
    </select>
</mapper>